<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8" />
    <title>Spotify OAuth Redirect</title>
</head>
<body>
    <h1>Spotify OAuth Redirect</h1>
    <p id="code-display">Authorization Code wird geladen...</p>

    <script>
        // URL-Parameter auslesen
        const params = new URLSearchParams(window.location.search);
        const code = params.get('code');
        const error = params.get('error');

        const display = document.getElementById('code-display');

        if (error) {
            display.textContent = `Fehler bei der Autorisierung: ${error}`;
        } else if (code) {
            display.textContent = `Authorization Code: ${code}`;

            // Optional: Hier kannst du den Code an deinen Backend-Server senden
            // Beispiel:
            /*
            fetch('/auth/callback', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({ code: code })
            }).then(response => {
                // handle response
            });
            */
        } else {
            display.textContent = 'Kein Authorization Code gefunden.';
        }
    </script>
</body>
</html>
